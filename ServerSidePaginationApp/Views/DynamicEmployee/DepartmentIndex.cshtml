@{
    ViewData["Title"] = "Department List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f4f7fa;
            font-family: Arial, sans-serif;
            transition: background-color 0.3s ease;
        }

        .table-container {
            margin-top: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            background-color: white;
            animation: fadeIn 0.5s;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
        }

        table.dataTable thead th {
            background-color: #6c757d;
            color: white;
        }

        table.dataTable tbody tr:hover {
            background-color: #e9ecef;
            transform: scale(1.02);
            transition: transform 0.2s ease;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.5em 1em;
            border-radius: 5px;
            background: #f0f0f0;
            color: #333;
            border: 1px solid #dcdcdc;
            transition: background 0.3s, color 0.3s;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: #dcdcdc;
            color: #000;
        }

        .loader {
            display: none;
            position: fixed;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            z-index: 9999;
        }

        .spinner-border {
            width: 3rem;
            height: 3rem;
            border-width: 0.25em;
            color: #6c757d;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        .action-buttons .btn {
            padding: 0.25rem 0.5rem;
            background-color: transparent;
            border: none;
            color: #6c757d; /* Simple color for icons */
            cursor: pointer;
        }

        .action-buttons .btn:hover {
            color: #000; /* Darker color on hover */
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="table-container p-4">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <table id="dynamicDepartmentTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Employee Count</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <div class="loader">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="~/js/dynamicTable.js"></script>

    <!-- Initialize dynamic table function -->
    <script>
        $(document).ready(function () {
            initializeTable("dynamicDepartmentTable", "/dynamicemployee/departments/paginate", [
                { "data": "name", "name": "Name" },
                { "data": "location", "name": "Location" },
                { "data": "employeeCount", "name": "EmployeeCount" },
                {
                    "data": null,
                    "defaultContent": `
                        <div class='action-buttons'>
                            <button class='btn' title='Edit'><span class='glyphicon glyphicon-pencil'></span></button>
                            <button class='btn' title='Delete'><span class='glyphicon glyphicon-trash'></span></button>
                        </div>`,
                    "orderable": false
                }
            ]);
        });
    </script>
</body>
</html>
